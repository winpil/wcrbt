html,body{
  width: 100%;
  height: 100%;
}
.login{
  width: 100%;
  height: 100%;
  background: url("../images/login_bg.jpg") no-repeat top center;
  background-size: cover;
  border:1px solid transparent;
  >.loginBox{
    width: 530px;
    height: 500px;
    padding:0 46px 40px 46px;
    border:1px solid transparent;
    margin:200px auto;
    background-color: #fff;
    position: relative;
    >.img{
      position: absolute;
      width: 149px;
      height: 149px;
      background: url("../images/icon_login_logo.png");
      left:50%;
      margin-left: -75px;
      margin-top: -75px;
    }
    >h3{
      margin-top: 96px;
      //margin-bottom: 96px;
      text-align: center;
      font-size: 30px;
    }
    >.el-form {
      padding-top: 30px;
    }
    >.btn{
      margin-top: 30px;
      text-align: center;
      a{
        display: block;
        width: 400px;
        height: 45px;
        line-height: 45px;
        margin:0 auto;
        background-color: #57dcaa;
        color: #ffffff;
        font-size: 24px;
      }
    }
  }
}