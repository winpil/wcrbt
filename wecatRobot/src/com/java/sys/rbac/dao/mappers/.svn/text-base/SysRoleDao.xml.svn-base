<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.java.sys.rbac.dao.SysRoleDao">

	<sql id="tableColumns">
			a.id AS "id",
		a.name AS "name",
		a.update_date AS "updateDate",
		a.create_date AS "createDate"
	</sql>
	
	<select id="get" resultType="SysRole">
		SELECT 
			<include refid="tableColumns"/>
		FROM `sys_role` a
		WHERE a.id = #{id}
	</select>
	
	<select id="findListSQL" resultType="SysRole">
		${sql }
	</select>
	
	<select id="findListSQLMap" resultType="java.util.HashMap">
		${sql }
	</select>
	
    <select id="findList" resultType="SysRole">
        SELECT 
	        <include refid="tableColumns"/>
        FROM 
        	`sys_role` a
        <where>
        	<include refid="whereSQL"/>
        </where>
        <choose>
			<when test="orderBy != null and orderBy != ''">
				ORDER BY ${orderBy}
			</when>
			<otherwise>
				ORDER BY a.create_date DESC
			</otherwise>
		</choose>
        <if test="first != null and max != null">
			LIMIT #{first},#{max}
		</if>
    </select>
    
    <sql id="whereSQL">
		<if test="name != null and name != ''">
    		AND a.name = #{name}
    	</if>
		<if test="updateDate != null and updateDate != ''">
    		AND a.update_date = #{updateDate}
    	</if>
		<if test="createDate != null and createDate != ''">
    		AND a.create_date = #{createDate}
    	</if>
    </sql>
    
    <insert id="insert">
		INSERT INTO sys_role(
		            	id,
        	name,
        	update_date,
        	create_date
		) VALUES (
		            	#{id},
        	#{name},
        	#{updateDate},
        	#{createDate}
		)
	</insert>
	
	<update id="update">
		UPDATE sys_role SET 	
		    			name = #{name},
			update_date = #{updateDate},
			create_date = #{createDate}
		WHERE id = #{id}
	</update>
 	
 	<update id="delete">
		DELETE FROM sys_role
		WHERE id = #{id}
	</update>
	
	<select id="getCount" resultType="Integer">
		SELECT count(1) FROM `sys_role` a
		<where>
			<include refid="whereSQL"/>
		</where>
	</select>
    
</mapper>